{
    "compilerOptions": {
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "noEmit": true
    },
    "include": [
        "test/**/*",
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules"
    ]
}