{
    "name": "@entity-core/integration-test",
    "version": "0.0.3",
    "description": "Integration tests for the entity-core",
    "repository": "https://github.com/medatech/entity-core/tree/master/packages/pg",
    "author": "Martin Adams",
    "license": "MIT",
    "private": true,
    "scripts": {
        "test": "jest --runInBand test",
        "coverage": "jest --runInBand --coverage test",
        "lint": "eslint ./test/**/*.ts",
        "lint:autofix": "eslint --fix ./test/**/*.ts"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.11.1",
        "@babel/preset-env": "^7.11.0",
        "@babel/preset-typescript": "^7.10.4",
        "@entity-core/context": "^0.0.3",
        "@entity-core/datasource": "^0.0.3",
        "@entity-core/pg": "^0.0.3",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.6.0",
        "@types/pg": "^7.14.4",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.9.1",
        "babel-jest": "^26.3.0",
        "eslint": "^7.7.0",
        "jest": "^26.4.0",
        "sql-template-strings": "^2.2.2",
        "ts-jest": "^26.2.0",
        "typescript": "^3.9.7"
    }
}
