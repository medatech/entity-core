{
    "compilerOptions": {
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts"
    ]
}